@model IEnumerable<Assessment1.Models.Customer>

@{
    ViewBag.Title = "Customers By Order ID 10248";
}

<h2>Customers whose Order ID is 10248</h2>

@if (Model == null || !Model.Any())
{
    <p>No customers found for this Order ID.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Country</td>
                </tr>
            }
        </tbody>
    </table>
}
